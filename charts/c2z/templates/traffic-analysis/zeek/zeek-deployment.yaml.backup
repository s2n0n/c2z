apiVersion: apps/v1
kind: Deployment
metadata:
  name: zeek-analyzer
  namespace: scenario-web-vuln
spec:
  replicas: 1
  selector:
    matchLabels:
      app: zeek
  template:
    metadata:
      labels:
        app: zeek
    spec:
      containers:
      - name: zeek
        image: zeek/zeek:7.0.0  # 고정 태그!
        command: ["/bin/sh", "/scripts/analyze.sh"]
        resources:
          requests:
            cpu: "500m"
            memory: "512Mi"
          limits:
            cpu: "2000m"  # 더 여유있게
            memory: "2Gi"
        volumeMounts:
        - name: pcap-storage
          mountPath: /pcaps
        - name: zeek-logs
          mountPath: /zeek-logs
        - name: scripts
          mountPath: /scripts
        livenessProbe:
          exec:
            command: ["pgrep", "-f", "analyze.sh"]
          initialDelaySeconds: 30
          periodSeconds: 60
      volumes:
      - name: scripts
        configMap:
          name: zeek-analyzer-script
          defaultMode: 0755
      - name: pcap-storage
        persistentVolumeClaim:
          claimName: pcap-storage
      - name: zeek-logs
        persistentVolumeClaim:
          claimName: zeek-logs-pvc
